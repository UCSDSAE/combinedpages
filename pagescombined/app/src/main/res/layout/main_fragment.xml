<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saebackground">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Login via Facebook"
        android:id="@+id/facebook"
        android:layout_gravity="center_horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="#3b5998"
        android:textColor="#ffffffff"
        android:layout_above="@+id/googleplus"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Login via Google+"
        android:id="@+id/googleplus"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="19dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="#D34836"
        android:textColor="#ffffffff"
        android:layout_marginBottom="151dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook" />
</RelativeLayout>